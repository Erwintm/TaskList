<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="Yharnam_Task.View.PopupView"
             CanBeDismissedByTappingOutsideOfPopup="True"
             Background="Transparent"
             HorizontalOptions="Fill"  
             VerticalOptions="Fill">

    <Frame BackgroundColor="Black" 
               CornerRadius="20" 
               Padding="20"
               HorizontalOptions="Center" 
               VerticalOptions="Center"
               WidthRequest="400"
               HeightRequest="620"
               HasShadow="True"
               BorderColor="DimGray"
               Shadow="Dark">

        <ScrollView>
            <VerticalStackLayout Spacing="30"
                                 Padding="10">

                <Grid>
                    <Button Text="✕" 
                                FontSize="16"
                                BackgroundColor="Transparent"
                                TextColor="Red"
                                WidthRequest="32"
                                HeightRequest="32"
                                CornerRadius="16"
                                HorizontalOptions="End"
                                Clicked="CerrarPopup_Clicked" />

                    <Label Text="Nueva Tarea" 
                               FontSize="24" 
                               FontAttributes="Bold" 
                               TextColor="White"
                               HorizontalOptions="Center" />
                </Grid>

                <BoxView HeightRequest="1" Color="DimGray" />

                <VerticalStackLayout Spacing="20">

                    <VerticalStackLayout Spacing="8">
                        <Label Text="TÍTULO *" 
                                   FontSize="11" 
                                   FontAttributes="Bold" 
                                   TextColor="Gainsboro" />
                        <Entry x:Name="TituloEntry" 
                                   Placeholder="Ingresa el título de la tarea..." 
                                   PlaceholderColor="DarkGray"
                                   Text="{Binding NuevoTitulo}"
                                   TextColor="White"
                                   BackgroundColor="Transparent"
                                   Margin="15,12"
                                   ClearButtonVisibility="WhileEditing" />
                    </VerticalStackLayout>

                    <VerticalStackLayout Spacing="8">
                        <Label Text="DESCRIPCIÓN" 
                                   FontSize="11" 
                                   FontAttributes="Bold" 
                                   TextColor="Gainsboro" />
                        <Editor x:Name="DescripcionEditor" 
                                    Placeholder="Descripción opcional..." 
                                    PlaceholderColor="DarkGray"
                                    AutoSize="TextChanges"
                                    BackgroundColor="Transparent"
                                    Margin="15,12"
                                    Text="{Binding NuevaDescripcion}" 
                                    TextColor="White"/>
                    </VerticalStackLayout>

                    <Grid ColumnDefinitions="*, *" ColumnSpacing="15">
                        <VerticalStackLayout Grid.Column="0" Spacing="8">
                            <Label Text="FECHA ENTREGA" 
                                       FontSize="11" 
                                       FontAttributes="Bold" 
                                       TextColor="Gainsboro" />
                            <DatePicker x:Name="FechaEntregaDatePicker" 
                                            Date="{Binding FechaEntrega}"
                                            MinimumDate="{Binding Today}"
                                            BackgroundColor="Transparent"
                                            Format="dd/MM/yyyy"
                                            Margin="12,0"
                                            TextColor="White" />
                        </VerticalStackLayout>

                        <VerticalStackLayout Grid.Column="1" Spacing="8">
                            <Label Text="DIFICULTAD" 
                                       FontSize="11" 
                                       FontAttributes="Bold" 
                                       TextColor="Gainsboro" />
                            <Picker x:Name="DificultadPicker"
                                        SelectedItem="{Binding DificultadSeleccionada}"
                                        BackgroundColor="Transparent"
                                        TextColor="White"
                                        FontSize="14"
                                        HeightRequest="45"
                                        HorizontalOptions="Fill"
                                        HorizontalTextAlignment="Start"
                                        TitleColor="DarkGray">
                                <Picker.Items>
                                    <x:String>Fácil</x:String>
                                    <x:String>Media</x:String>
                                    <x:String>Difícil</x:String>
                                </Picker.Items>
                            </Picker>
                        </VerticalStackLayout>
                    </Grid>
                    
                    <VerticalStackLayout Spacing="8">
                        <Label Text="TIEMPO ESTIMADO" 
                                   FontSize="11" 
                                   FontAttributes="Bold" 
                                   TextColor="Gainsboro" />
                        <Frame BackgroundColor="Transparent" 
                                   CornerRadius="10" 
                                   Padding="20,15" 
                                   HasShadow="False"
                                   BorderColor="Gray">
                            <VerticalStackLayout Spacing="15">
                                <Label Text="{Binding TiempoDisplay}"
                                           FontSize="16"
                                           FontAttributes="Bold"
                                           TextColor="BlueViolet"
                                           HorizontalOptions="Center"/>

                                <Slider x:Name="TiempoSlider"
                                        Minimum="15"
                                        Maximum="480"
                                        Value="{Binding TiempoEstimadoMinutos}"
                                        MinimumTrackColor="BlueViolet"
                                        MaximumTrackColor="Gray"
                                        ThumbColor="BlueViolet"
                                        HeightRequest="30"/>

                                <Grid ColumnDefinitions="*, *" 
                                          HorizontalOptions="Fill"
                                          ColumnSpacing="0">
                                    <Label Grid.Column="0" Text="15m" FontSize="9" TextColor="DarkGray" HorizontalOptions="Start"/>
                                    <Label Grid.Column="1" Text="8h" FontSize="9" TextColor="DarkGray" HorizontalOptions="End"/>
                                </Grid>
                            </VerticalStackLayout>
                        </Frame>
                    </VerticalStackLayout>

                </VerticalStackLayout>

                <Grid ColumnDefinitions="*, *" ColumnSpacing="12" Margin="0,20,0,0">
                    <Button Grid.Column="1" 
                                Text="GUARDAR TAREA" 
                                BackgroundColor="BlueViolet"
                                TextColor="White"
                                FontSize="14"
                                FontAttributes="Bold"
                                HeightRequest="48"
                                CornerRadius="12"
                                Clicked="CrearTarea_Clicked" />
                </Grid>

            </VerticalStackLayout>
        </ScrollView>

    </Frame>
</toolkit:Popup>
