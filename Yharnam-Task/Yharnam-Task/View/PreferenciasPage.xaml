<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Yharnam_Task.View.PreferenciasPage"
             Title="Preferencias"
             BackgroundColor="{StaticResource BackgroundColorLight}">

    <ScrollView>
        <VerticalStackLayout Padding="20"
                             Spacing="24">

            <!-- Encabezado -->
            <VerticalStackLayout Spacing="4" Margin="0,10,0,0">
                <Label Text="Preferencias"
                       Style="{StaticResource HeadingLabelStyle}" />

                <Label Text="Configura cómo quieres usar Yharnam Task."
                       Style="{StaticResource SubtitleLabelStyle}" />
            </VerticalStackLayout>

            <!-- Sección: Apariencia -->
            <Frame BackgroundColor="{StaticResource CardBackgroundColor}"
                   CornerRadius="16"
                   Padding="16"
                   HasShadow="True"
                   BorderColor="#E5E7EB">
                <VerticalStackLayout Spacing="8">
                    <Label Text="Apariencia"
                           FontAttributes="Bold"
                           FontSize="14"
                           TextColor="{StaticResource TextPrimaryColor}" />

                    <Label Text="Próximamente podrás cambiar entre tema claro y oscuro."
                           FontSize="12"
                           TextColor="{StaticResource TextSecondaryColor}" />
                </VerticalStackLayout>
            </Frame>

            <!-- Sección: Notificaciones -->
            <Frame BackgroundColor="{StaticResource CardBackgroundColor}"
                   CornerRadius="16"
                   Padding="16"
                   HasShadow="True"
                   BorderColor="#E5E7EB">
                <VerticalStackLayout Spacing="8">
                    <Label Text="Notificaciones"
                           FontAttributes="Bold"
                           FontSize="14"
                           TextColor="{StaticResource TextPrimaryColor}" />

                    <Label Text="Aquí podrás activar recordatorios para tus tareas importantes."
                           FontSize="12"
                           TextColor="{StaticResource TextSecondaryColor}" />
                </VerticalStackLayout>
            </Frame>

            <!-- Sección: Perfil -->
            <Frame BackgroundColor="{StaticResource CardBackgroundColor}"
                   CornerRadius="16"
                   Padding="16"
                   HasShadow="True"
                   BorderColor="#E5E7EB">
                <VerticalStackLayout Spacing="8">
                    <Label Text="Perfil"
                           FontAttributes="Bold"
                           FontSize="14"
                           TextColor="{StaticResource TextPrimaryColor}" />

                    <Label Text="Más adelante podrás editar tu nombre y otras preferencias."
                           FontSize="12"
                           TextColor="{StaticResource TextSecondaryColor}" />
                </VerticalStackLayout>
            </Frame>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
