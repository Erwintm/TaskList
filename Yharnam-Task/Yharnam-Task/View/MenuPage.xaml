<?xml version="1.0" encoding="utf-8" ?>
<ContentPage 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:app="clr-namespace:Yharnam_Task"
    x:Class="Yharnam_Task.View.MenuPage"
    Title="Yharnam Task List"
    BackgroundColor="Black">

    <ContentPage.BindingContext>
        <x:Static Member="app:App.MainViewModel" xmlns:app="clr-namespace:Yharnam_Task"/>
    </ContentPage.BindingContext>

    <Grid ColumnDefinitions="2*,1*" ColumnSpacing="0">
        <Grid Grid.Column="0" RowDefinitions="Auto,*,Auto">

            <VerticalStackLayout Grid.Row="0" Spacing="15" Padding="20,40,20,20">
                <Label Text="Yharnam Task List" 
                       FontSize="28" 
                       FontAttributes="Bold" 
                       TextColor="White"
                       HorizontalOptions="Center" />

                <BoxView HeightRequest="1" Color="DimGray" />

                <Grid ColumnDefinitions="*, Auto" VerticalOptions="Center">
                    <Label Text="{Binding Tareas.Count, StringFormat='{0} tareas'}" 
                           FontSize="12" 
                           TextColor="Gainsboro"
                           VerticalOptions="Center"/>

                    <Button Grid.Column="1"
                            Text="Filtrar"
                            BackgroundColor="Transparent"
                            TextColor="BlueViolet"
                            FontSize="12"
                            FontAttributes="Bold"
                            BorderColor="BlueViolet"
                            BorderWidth="1"
                            HeightRequest="30"
                            CornerRadius="8"
                            Padding="15,0"/>
                </Grid>
            </VerticalStackLayout>

            <ScrollView Grid.Row="1" Padding="20,0,20,0">
                <CollectionView ItemsSource="{Binding Tareas}">

                    <CollectionView.ItemsLayout>
                        <LinearItemsLayout Orientation="Vertical" ItemSpacing="16"/>
                    </CollectionView.ItemsLayout>

                    <CollectionView.EmptyView>
                        <VerticalStackLayout HorizontalOptions="Center" 
                                             VerticalOptions="Center" 
                                             Spacing="20"
                                             Margin="0,100">
                            <Label Text="ðŸ“" 
                                   FontSize="48" 
                                   HorizontalOptions="Center"/>
                            <Label Text="No hay tareas" 
                                   FontSize="16" 
                                   TextColor="Gainsboro"
                                   HorizontalOptions="Center"/>
                            <Label Text="Agrega tu primera tarea con el botÃ³n +" 
                                   FontSize="12" 
                                   TextColor="DarkGray"
                                   HorizontalOptions="Center"/>
                        </VerticalStackLayout>
                    </CollectionView.EmptyView>

                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Frame BackgroundColor="#1E1E1E" 
                                   HasShadow="True">
                                <Grid RowDefinitions="Auto,Auto,Auto,Auto,Auto" 
                                      ColumnDefinitions="*,Auto"
                                      RowSpacing="8">

                                    <Label Grid.Row="0" Grid.Column="0"
                                           Text="{Binding Titulo}" 
                                           FontAttributes="Bold" 
                                           FontSize="18" 
                                           TextColor="White"
                                           LineBreakMode="TailTruncation"/>

                                    <Label Grid.Row="0" Grid.Column="1"
                                           Text="{Binding FechaEntrega, StringFormat='{0:dd/MM}'}" 
                                           FontSize="11" 
                                           TextColor="DarkGray"
                                           HorizontalOptions="End"/>

                                    <Label Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2"
                                           Text="{Binding Descripcion}" 
                                           FontSize="13" 
                                           TextColor="LightGray"
                                           LineBreakMode="TailTruncation"/>

                                    <Grid Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2"
                                          ColumnDefinitions="Auto,*,Auto"
                                          VerticalOptions="Center">

                                        <Frame Grid.Column="0"
                                               BackgroundColor="{Binding DificultadColor}"
                                               Padding="8,4"
                                               CornerRadius="6"
                                               HasShadow="False">
                                            <Label Text="{Binding Dificultad}" 
                                                   FontSize="10" 
                                                   FontAttributes="Bold"
                                                   TextColor="White"/>
                                        </Frame>

                                        <Label Grid.Column="2"
                                               Text="{Binding TiempoEstimadoHoras, StringFormat='{0:F1}h'}" 
                                               FontSize="11" 
                                               TextColor="BlueViolet"
                                               FontAttributes="Bold"
                                               HorizontalOptions="End"/>
                                    </Grid>

                                    <BoxView Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2"
                                             HeightRequest="4"
                                             Color="#2A2A2A"
                                             CornerRadius="2"/>

                                    <BoxView Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2"
                                             HeightRequest="4"
                                             Color="BlueViolet"
                                             CornerRadius="2"
                                             WidthRequest="60"/>
                                    <!--
                                    <StackLayout Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="2"
                                                 Orientation="Horizontal"
                                                 HorizontalOptions="End"
                                                 Spacing="10">
                                        <Label Text="{Binding PrioridadResumen}"
                                               FontSize="10"
                                               TextColor="Gray"/>
                                        <Label Text="{Binding PrioridadCalculada, StringFormat='Prioridad: {0:F1}'}"
                                               FontSize="12"
                                               FontAttributes="Bold"
                                               TextColor="#FFFFFF"/>
                                    </StackLayout>
                                    -->
                                </Grid>
                            </Frame>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </ScrollView>

            <Button Grid.Row="2"
                    Text="+" 
                    FontSize="24"
                    BackgroundColor="BlueViolet"
                    TextColor="White"
                    WidthRequest="60"
                    HeightRequest="60"
                    CornerRadius="30"
                    HorizontalOptions="End"
                    VerticalOptions="End"
                    Margin="20,10,20,20"
                    Clicked="OnPopupButtonClicked"/>

        </Grid>

        <Frame Grid.Column="1"
               BackgroundColor="#1A1A1A"
               Padding="20"
               Margin="10"
               CornerRadius="15"
               BorderColor="DimGray"
               HasShadow="True">

            <ScrollView>
                <VerticalStackLayout Spacing="20">

                    <VerticalStackLayout Spacing="10">
                        <Label Text="âš™ï¸ Preferencias" 
                               FontSize="20" 
                               FontAttributes="Bold" 
                               TextColor="White"
                               HorizontalOptions="Center"/>

                        <BoxView HeightRequest="1" Color="BlueViolet"/>
                    </VerticalStackLayout>

                    <VerticalStackLayout x:Name="PreferencesContainer" Spacing="15">

                        <VerticalStackLayout Spacing="5">
                            <Label Text="ðŸ‘¤ Usuario" 
                                   FontSize="12" 
                                   FontAttributes="Bold" 
                                   TextColor="Gainsboro"/>
                            <Label Text="{Binding ConfiguracionUsuario.Nombre}" 
                                   FontSize="14" 
                                   TextColor="White"
                                   FontAttributes="Bold"/>
                            <BoxView HeightRequest="1" Color="#2A2A2A" Margin="0,5,0,0"/>
                        </VerticalStackLayout>

                        <VerticalStackLayout Spacing="5">
                            <Label Text="ðŸŽ¯ Dificultad preferida" 
                                   FontSize="12" 
                                   FontAttributes="Bold" 
                                   TextColor="Gainsboro"/>
                            <Label Text="{Binding ConfiguracionUsuario.PreferenciaDificultad, StringFormat='{0}'}" 
                                   FontSize="14" 
                                   TextColor="LightBlue"/>
                            <BoxView HeightRequest="1" Color="#2A2A2A" Margin="0,5,0,0"/>
                        </VerticalStackLayout>

                        <VerticalStackLayout Spacing="5">
                            <Label Text="ðŸ“Š Prioridad preferida" 
                                   FontSize="12" 
                                   FontAttributes="Bold" 
                                   TextColor="Gainsboro"/>
                            <Label Text="{Binding ConfiguracionUsuario.PreferenciaPrioridad, StringFormat='{0}'}" 
                                   FontSize="14" 
                                   TextColor="LightGreen"/>
                            <BoxView HeightRequest="1" Color="#2A2A2A" Margin="0,5,0,0"/>
                        </VerticalStackLayout>

                        <VerticalStackLayout Spacing="5">
                            <Label Text="â±ï¸ DuraciÃ³n preferida" 
                                   FontSize="12" 
                                   FontAttributes="Bold" 
                                   TextColor="Gainsboro"/>
                            <Label Text="{Binding ConfiguracionUsuario.PreferenciaDuracion, StringFormat='{0}'}" 
                                   FontSize="14" 
                                   TextColor="LightYellow"/>
                            <BoxView HeightRequest="1" Color="#2A2A2A" Margin="0,5,0,0"/>
                        </VerticalStackLayout>

                        <VerticalStackLayout Spacing="5">
                            <Label Text="ðŸ“‹ Orden de prioridades" 
                                   FontSize="12" 
                                   FontAttributes="Bold" 
                                   TextColor="Gainsboro"/>

                            <VerticalStackLayout Spacing="3" BindableLayout.ItemsSource="{Binding ConfiguracionUsuario.OrdenPrioridades}">
                                <BindableLayout.ItemTemplate>
                                    <DataTemplate>
                                        <Grid ColumnDefinitions="Auto,*">
                                            <Label Grid.Column="0"
                                                   Text="â€¢" 
                                                   FontSize="10" 
                                                   TextColor="BlueViolet"
                                                   VerticalOptions="Center"/>
                                            <Label Grid.Column="1"
                                                   Text="{Binding .}" 
                                                   FontSize="11" 
                                                   TextColor="LightGray"
                                                   VerticalOptions="Center"/>
                                        </Grid>
                                    </DataTemplate>
                                </BindableLayout.ItemTemplate>
                            </VerticalStackLayout>

                            <BoxView HeightRequest="1" Color="#2A2A2A" Margin="0,5,0,0"/>
                        </VerticalStackLayout>

                    </VerticalStackLayout>

                    <VerticalStackLayout x:Name="NoPreferencesView" 
                                         IsVisible="False"
                                         HorizontalOptions="Center" 
                                         VerticalOptions="Center" 
                                         Spacing="15"
                                         Margin="0,50">
                        <Label Text="âš™ï¸" 
                               FontSize="32" 
                               HorizontalOptions="Center"
                               TextColor="Gray"/>
                        <Label Text="Sin configuraciÃ³n" 
                               FontSize="14" 
                               TextColor="Gainsboro"
                               HorizontalOptions="Center"/>
                        <Label Text="Configura tus preferencias" 
                               FontSize="11" 
                               TextColor="DarkGray"
                               HorizontalOptions="Center"/>
                        <Button Text="Configurar"
                                BackgroundColor="BlueViolet"
                                TextColor="White"
                                CornerRadius="8"
                                Padding="20,8"
                                Clicked="OnConfigurarClicked"/>
                    </VerticalStackLayout>

                </VerticalStackLayout>
            </ScrollView>
        </Frame>
    </Grid>
</ContentPage>