<?xml version="1.0" encoding="utf-8" ?>
<ContentPage 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:app="clr-namespace:Yharnam_Task"
    x:Class="Yharnam_Task.View.MenuPage"
    Title="Yharnam Task List"
    BackgroundColor="Black">

    <ContentPage.BindingContext>
        <x:Static Member="app:App.MainViewModel" xmlns:app="clr-namespace:Yharnam_Task"/>
    </ContentPage.BindingContext>

    <Grid>
        <ScrollView>
            <VerticalStackLayout Spacing="25" Padding="20">

                <VerticalStackLayout Spacing="15" Margin="0,40,0,0">
                    <Label Text="Yharnam Task List" 
                           FontSize="28" 
                           FontAttributes="Bold" 
                           TextColor="White"
                           HorizontalOptions="Center" />

                    <BoxView HeightRequest="1" Color="DimGray" />

                    <Grid ColumnDefinitions="*, Auto" VerticalOptions="Center">
                        <Label Text="{Binding Tareas.Count, StringFormat='{0} tareas'}" 
                               FontSize="12" 
                               TextColor="Gainsboro"
                               VerticalOptions="Center"/>

                        <Button Grid.Column="1"
                                Text="Filtrar"
                                BackgroundColor="Transparent"
                                TextColor="BlueViolet"
                                FontSize="12"
                                FontAttributes="Bold"
                                BorderColor="BlueViolet"
                                BorderWidth="1"
                                HeightRequest="30"
                                CornerRadius="8"
                                Padding="15,0"/>
                    </Grid>
                </VerticalStackLayout>

                <CollectionView ItemsSource="{Binding Tareas}">
                    <CollectionView.EmptyView>
                        <VerticalStackLayout HorizontalOptions="Center" 
                                             VerticalOptions="Center" 
                                             Spacing="20"
                                             Margin="0,100">
                            <Label Text="ðŸ“" 
                                   FontSize="48" 
                                   HorizontalOptions="Center"/>
                            <Label Text="No hay tareas" 
                                   FontSize="16" 
                                   TextColor="Gainsboro"
                                   HorizontalOptions="Center"/>
                            <Label Text="Agrega tu primera tarea con el botÃ³n +" 
                                   FontSize="12" 
                                   TextColor="DarkGray"
                                   HorizontalOptions="Center"/>
                        </VerticalStackLayout>
                    </CollectionView.EmptyView>

                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Frame BackgroundColor="#1E1E1E" 
                                   Padding="20" 
                                   Margin="0,8"
                                   CornerRadius="15"
                                   HasShadow="True"
                                   BorderColor="DimGray">
                                <Grid RowDefinitions="Auto,Auto,Auto,Auto,Auto" 
                                      ColumnDefinitions="*,Auto"
                                      RowSpacing="8">

                                    <Label Grid.Row="0" Grid.Column="0"
                                           Text="{Binding Titulo}" 
                                           FontAttributes="Bold" 
                                           FontSize="18" 
                                           TextColor="White"
                                           LineBreakMode="TailTruncation"/>

                                    <Label Grid.Row="0" Grid.Column="1"
                                           Text="{Binding FechaEntrega, StringFormat='{0:dd/MM}'}" 
                                           FontSize="11" 
                                           TextColor="DarkGray"
                                           HorizontalOptions="End"/>

                                    <Label Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2"
                                           Text="{Binding Descripcion}" 
                                           FontSize="13" 
                                           TextColor="LightGray"
                                           LineBreakMode="TailTruncation"/>

                                    <Grid Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2"
                                          ColumnDefinitions="Auto,*,Auto"
                                          VerticalOptions="Center">

                                        <Frame Grid.Column="0"
                                               BackgroundColor="{Binding DificultadColor}"
                                               Padding="8,4"
                                               CornerRadius="6"
                                               HasShadow="False">
                                            <Label Text="{Binding Dificultad}" 
                                                   FontSize="10" 
                                                   FontAttributes="Bold"
                                                   TextColor="White"/>
                                        </Frame>

                                        <Label Grid.Column="2"
                                               Text="{Binding TiempoEstimadoHoras, StringFormat='{0:F1}h'}" 
                                               FontSize="11" 
                                               TextColor="BlueViolet"
                                               FontAttributes="Bold"
                                               HorizontalOptions="End"/>
                                    </Grid>

                                    <BoxView Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2"
                                             HeightRequest="4"
                                             Color="#2A2A2A"
                                             CornerRadius="2"/>

                                    <BoxView Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2"
                                             HeightRequest="4"
                                             Color="BlueViolet"
                                             CornerRadius="2"
                                             WidthRequest="60"/>

                                    <StackLayout Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="2"
                                                 Orientation="Horizontal"
                                                 HorizontalOptions="End"
                                                 Spacing="10">
                                        <Label Text="{Binding PrioridadResumen}"
                                               FontSize="10"
                                               TextColor="Gray"/>
                                        <Label Text="{Binding PrioridadCalculada, StringFormat='Prioridad: {0:F1}'}"
                                               FontSize="12"
                                               FontAttributes="Bold"
                                               TextColor="Orange"/>
                                    </StackLayout>
                                </Grid>
                            </Frame>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>

            </VerticalStackLayout>
        </ScrollView>

        <Button Text="+" 
                FontSize="24"
                BackgroundColor="BlueViolet"
                TextColor="White"
                WidthRequest="60"
                HeightRequest="60"
                CornerRadius="30"
                HorizontalOptions="End"
                VerticalOptions="End"
                Margin="20"
                Clicked="OnPopupButtonClicked"/>
    </Grid>
</ContentPage>
