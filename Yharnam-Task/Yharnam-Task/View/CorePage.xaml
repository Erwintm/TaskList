<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Yharnam_Task.View.CorePage"
             Title="Core"
             BackgroundColor="{StaticResource BackgroundColorLight}">

    <ScrollView>
        <VerticalStackLayout Padding="20"
                             Spacing="24">

            <!-- Encabezado -->
            <VerticalStackLayout Spacing="4" Margin="0,10,0,0">
                <Label Text="Core de tareas"
                       Style="{StaticResource HeadingLabelStyle}" />

                <Label Text="Aquí podrás ver un resumen de tu productividad."
                       Style="{StaticResource SubtitleLabelStyle}" />
            </VerticalStackLayout>

            <!-- Card: Hoy -->
            <Frame BackgroundColor="{StaticResource CardBackgroundColor}"
                   CornerRadius="16"
                   Padding="16"
                   HasShadow="True"
                   BorderColor="#E5E7EB">
                <VerticalStackLayout Spacing="8">
                    <Label Text="Hoy"
                           FontAttributes="Bold"
                           FontSize="14"
                           TextColor="{StaticResource TextPrimaryColor}" />

                    <Label Text="Aquí verás tus tareas para hoy y su estado."
                           FontSize="12"
                           TextColor="{StaticResource TextSecondaryColor}" />
                </VerticalStackLayout>
            </Frame>

            <!-- Card: Esta semana -->
            <Frame BackgroundColor="{StaticResource CardBackgroundColor}"
                   CornerRadius="16"
                   Padding="16"
                   HasShadow="True"
                   BorderColor="#E5E7EB">
                <VerticalStackLayout Spacing="8">
                    <Label Text="Esta semana"
                           FontAttributes="Bold"
                           FontSize="14"
                           TextColor="{StaticResource TextPrimaryColor}" />

                    <Label Text="Próximamente podrás ver un resumen semanal de tus tareas."
                           FontSize="12"
                           TextColor="{StaticResource TextSecondaryColor}" />
                </VerticalStackLayout>
            </Frame>

            <!-- Card: En qué enfocarte -->
            <Frame BackgroundColor="{StaticResource CardBackgroundColor}"
                   CornerRadius="16"
                   Padding="16"
                   HasShadow="True"
                   BorderColor="#E5E7EB">
                <VerticalStackLayout Spacing="8">
                    <Label Text="En qué enfocarte"
                           FontAttributes="Bold"
                           FontSize="14"
                           TextColor="{StaticResource TextPrimaryColor}" />

                    <Label Text="Aquí podrás ver las tareas más importantes según su prioridad."
                           FontSize="12"
                           TextColor="{StaticResource TextSecondaryColor}" />
                </VerticalStackLayout>
            </Frame>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
